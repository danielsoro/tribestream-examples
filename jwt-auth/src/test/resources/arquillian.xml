<arquillian>
  <container qualifier="tomee" default="true">
    <configuration>
      <property name="groupId">com.tomitribe.tribestream</property>
      <property name="artifactId">tribestream</property>
      <property name="version">0.66</property>
      <property name="classifier"/>
      <property name="removeUnusedWebapps">true</property>
      <property name="httpsPort">-1</property>
      <property name="httpPort">-1</property>
      <property name="stopPort">-1</property>
      <property name="ajpPort">-1</property>
      <property name="cleanOnStartUp">true</property>
      <property name="simpleLog">true</property>
      <!-- if logging.properties is provided in conf/ then it is ignored -->
      <property name="dir">target/tribestream-remote</property>
      <property name="appWorkingDir">target/arquillian-test-working-dir</property>
      <property name="conf">src/test/conf</property>
      <property name="properties">
        openejb.deploymentId.format={appId}/{ejbJarId}/{ejbName}

        tribe.oauth2.jws.public-key = tag
        tribe.oauth2.jws.keystore.filename = conf/tag.jks
        tribe.oauth2.jws.keystore.password = this is sensible ;-)
        tribe.oauth2.jwt.issuer = https://soa.tomitribe.com/soa-iag/oauth
        tribe.oauth2.auth.header = gws-tag-jwt-access-token
        tribe.oauth2.auth.prefix =
      </property>
    </configuration>
  </container>
</arquillian>
