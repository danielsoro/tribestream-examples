<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns="http://jboss.org/schema/arquillian"
            xsi:schemaLocation="
              http://jboss.org/schema/arquillian
              http://www.jboss.org/schema/arquillian/arquillian_1_0.xsd">

  <container qualifier="tomee" default="true">
    <configuration>
      <property name="version">1.7.2-TT.1</property>
      <property name="classifier">plus</property>
      <property name="removeUnusedWebapps">true</property>
      <property name="httpsPort">-1</property>
      <property name="httpPort">-1</property>
      <property name="stopPort">-1</property>
      <property name="ajpPort">-1</property>
      <property name="cleanOnStartUp">true</property>
      <property name="simpleLog">true</property> <!-- if logging.properties is provided in conf/ then it is ignored -->
      <property name="dir">target/apache-tomee-remote</property>
      <property name="appWorkingDir">target/arquillian-test-working-dir</property>
      <property name="conf">src/test/conf</property>
      <property name="properties">
        openejb.deploymentId.format = {appId}/{ejbJarId}/{ejbName}
      </property>
      <property name="additionalLibs">
        mvn:com.tomitribe.tribestream:tribestream-security-api:${tribestream-security.version}
        mvn:com.tomitribe.tribestream:tribestream-security-core:${tribestream-security.version}
        mvn:com.tomitribe.tribestream:tribestream-security-signatures-api:${tribestream-security.version}
        mvn:com.tomitribe.tribestream:tribestream-security-signatures-core:${tribestream-security.version}
        mvn:com.tomitribe.tribestream:tribestream-security-digest-api:${tribestream-security.version}
        mvn:com.tomitribe.tribestream:tribestream-security-digest-core:${tribestream-security.version}
        mvn:com.tomitribe.tribestream:tribestream-security-date:${tribestream-security.version}
        mvn:com.tomitribe.tools:service-documentation-api:${tribestream-documentation.version}
        mvn:org.tomitribe:tomitribe-util:1.1.0
      </property>
    </configuration>
  </container>
</arquillian>
